// Verzend email functie
export const sendContactEmail = async ({ name, firstName, lastName, email, phone, company, message }) => {
  const transporter = createTransporter()

  const fullName = name || `${firstName} ${lastName}`

  const mailOptions = {
    from: `"Niblah Contact Form" <${process.env.SMTP_FROM || process.env.SMTP_USER}>`,
    to: process.env.CONTACT_EMAIL_TO || process.env.SMTP_USER,
    replyTo: email,
    subject: `Nieuw contactformulier: ${fullName} - ${company}`,
    text: createContactEmailText({ name: fullName, firstName, lastName, email, phone, company, message }),
    html: createContactEmailHTML({ name: fullName, firstName, lastName, email, phone, company, message }),
  }

  try {
    console.log('üìß Sending email to:', mailOptions.to)
    console.log('üìß Subject:', mailOptions.subject)
    
    const info = await transporter.sendMail(mailOptions)
    console.log('‚úÖ Email succesvol verzonden!')
    console.log('‚úÖ Message ID:', info.messageId)
    console.log('‚úÖ Response:', info.response)
    
    return { success: true, messageId: info.messageId }
  } catch (error) {
    console.error('‚ùå Email verzenden GEFAALD!')
    console.error('‚ùå Error name:', error.name)
    console.error('‚ùå Error message:', error.message)
    console.error('‚ùå Error code:', error.code)
    console.error('‚ùå Full error:', error)
    throw error
  }
}
